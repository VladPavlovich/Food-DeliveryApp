<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Favorite Restaurants"
                android:textSize="20sp"
                android:textStyle="bold"
                />


            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentFavorite"
                android:name="com.text.finalproject.FragmentFavorite"
                android:layout_width="match_parent"
                android:layout_height="193dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All Restaurants"
                android:textSize="20sp"
                android:textStyle="bold"
                />


            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentAll"
                android:name="com.text.finalproject.FragmentAll"
                android:layout_width="match_parent"
                android:layout_height="455dp" />

        </LinearLayout>




</FrameLayout>